<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All our Flats</h1>
    </div>
  </div>


  <div>
    <%= link_to 'Home', root_path, :class => "btn btn-primary" %> 
    <%= link_to 'Add Flat', new_flat_path, :class => "btn btn-primary" %> 
  </div>

  <div class="container">
  <br>
    <p>Signed in as: <%= current_user.email %></p>
    <p>First name - <%= current_user.first_name %></p>
    <p>Second name - <%= current_user.last_name %></p>
  </div>


  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-md-4">
        <div class="flat-card">
          <div class="flat-card-image" style="background-image: url('<%= flat.picture_url %>')"></div>
          <div class="flat-card-content">
            <div class="flat-card-title">
              <h4><%= flat.name %></h4>
            </div>
            <p><%= flat.address %></p>
            <div class="flex">
              <div class="flex align-items-center">
                <i class="fa-solid fa-people-line"></i>
                <span><%= flat.number_of_guests %></span>
              </div>
              <div class="flex align-items-center ms-3">
                <i class="fa-solid fa-euro-sign"></i>
                <span><%= flat.price_per_night %></span>
              <div class="flat-card-actions">
              <% if flat.user == current_user %>
                <%= link_to "More info", flat_path(flat) %>
                <%= link_to "Edit", edit_flat_path(flat), class: "ms-3 text-warning" %>
                <%= link_to "Remove", flat_path(flat),
                    data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                    class: "ms-3 text-danger"
                %>
                <% else %>
                  <%= link_to "More info", flat_path(flat) %>
                <% end %>
              </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


